# AI Chat Application Environment Variables
# Copy this file to .env and update with your actual values

# JWT Configuration
JWT_SECRET=ZettixTeamAIChatSecretKeyForJWTTokenGenerationVeryLongAndSecure2024
JWT_EXPIRATION=86400000

# Groq API Configuration (Required for AI functionality)
GROQ_API_KEY=your-actual-groq-api-key-here

# Spring Profile (default, production, development)
SPRING_PROFILES_ACTIVE=default

# Database Configuration (if you want to override defaults)
DB_HOST=database
DB_PORT=3306
DB_NAME=db_AIchatbot
DB_USERNAME=root
DB_PASSWORD=1111

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8081/api
REACT_APP_WS_BASE_URL=ws://localhost:8081
REACT_APP_NAME=AI Chat
REACT_APP_VERSION=1.0.0
GENERATE_SOURCEMAP=false

# Optional: Custom ports (if you want to change from defaults)
# BACKEND_PORT=8080
# FRONTEND_PORT=3005
# DATABASE_PORT=3306
# REDIS_PORT=6379

# Production SSL Configuration (for nginx profile)
# SSL_CERT_PATH=./ssl/cert.pem
# SSL_KEY_PATH=./ssl/key.pem
